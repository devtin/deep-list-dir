{
  "name": "deep-list-dir",
  "version": "1.2.0",
  "description": "Deeply lists given directory",
  "author": "Martin Rafael Gonzalez <tin@devtin.io>",
  "main": "dist/deep-list-dir.js",
  "scripts": {
    "build": "rollup -c",
    "build:live": "nodemon -w src -w test --exec npm run build",
    "lint": "eslint --ext .js --ignore-path .gitignore src/",
    "test": "ava --serial --verbose",
    "release": "standard-version -a"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devtin/deep-list-dir.git"
  },
  "keywords": [
    "deep",
    "deeply",
    "recursively",
    "list",
    "scan",
    "directory",
    "folder",
    "filter",
    "pattern"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devtin/deep-list-dir/issues"
  },
  "homepage": "https://github.com/devtin/deep-list-dir#readme",
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@rollup/plugin-commonjs": "^13.0.0",
    "ava": "^3.9.0",
    "eslint": "^7.3.1",
    "esm": "^3.2.25",
    "nodemon": "^2.0.4",
    "rollup": "^2.18.1",
    "standard-version": "^8.0.0"
  },
  "ava": {
    "files": [
      "test/**/*.test.js",
      "src/**/*.unit.js",
      "!test/fixtures"
    ],
    "require": [
      "esm",
      "./test/setup.js"
    ],
    "babel": true,
    "snapshotDir": "test/snapshots"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "node": true,
      "commonjs": true
    },
    "globals": {
      "BigInt": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "ignorePatterns": [
      "*.unit.js"
    ]
  },
  "standard-version": {
    "scripts": {
      "prerelease": "npm run lint && npm run build",
      "precommit": "npm run --silent build > /dev/null 2>&1 && git add ."
    }
  },
  "dependencies": {
    "fs-extra": "^9.0.1",
    "lodash": "^4.17.15",
    "minimatch": "^3.0.4"
  }
}
